    </div>

    <br /><br /><br />
<div class="container">
    <div class="accordion-body">
      <table style="line-height: 10px" class="table table-hover">
        <thead>
          <!--表示表格中不同直行 (column) 的標題-->
          <tr style="background-color: #dfd1ef">
            <!--定義表格的橫列 (row)-->
            <th scope="col" align="center" valign="middle">學生編號</th>
            <th scope="col" align="center" valign="middle">違規內容</th>
            <th scope="col" align="center" valign="middle">日期</th>
            <th scope="col" align="center" valign="middle">懲處</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody id="form">
          {{#each message}}
            <tr>
              <td valign="middle">{{this.VR_Student_ID}}</td>
              <td valign="middle">{{this.VR_Content}}</td>
              <td valign="middle">{{this.VR_Date}}</td>
              <td valign="middle">{{this.VR_Penalty}}</td>
              <form action="/supervisorToViolation/action" method="POST">
                <td>
                  <div style="text-align: left">
                  <button type="button" style=" width: 75px; height: 40px; background-color: #5769b4; color: #ffffff; border: 2px #5769b4 outset;"
                  data-bs-toggle="modal"data-bs-target="#v{{this.VR_Penalty}}"data-bs-whatever="@mdo">
                    修改
                  </button>
                  </div>
                  <div class="modal fade" id="v{{this.VR_Penalty}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLabel" style="color: #000000; font-weight: bold" >
                            撰寫處
                          </h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <input type="hidden" name="searchSQL" value="{{../searchSQL}}">
                          <input type="hidden" name="id" value="{{this.VR_Number}}">
                          <input type="hidden" name="studentID" value="{{this.VR_Student_ID}}">
                          <div class="mb-3">
                            <label for="recipient-name" class="col-form-label" style="color: #335495; font-weight: bold" >違規內容:</label>
                            <input type="text" id="content" name="content" value="{{this.VR_Content}}"  class="form-control"/>
                          </div>
                          <div class="mb-3">
                            <label for="message-text" class="col-form-label" style="color: #335495; font-weight: bold" >懲處:</label>
                            <textarea class="form-control"  id="penality" name="penality" value="{{this.VR_Penalty}}">{{this.VR_Penalty}}</textarea>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" > Close</button>
                          <button type="submit" name="action" value="update" class="btn btn-primary">修改</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </td>
                <td>
                  <button style=" width: 75px; height: 40px; background-color: #e74a3b; color: #ffffff; border: 2px #d44141 outset; " type="submit" name="action" value="delete">
                    刪除
                  </button>
                </td>
              </form>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
