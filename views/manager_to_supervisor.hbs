    <!-- Main Content-->
<div class="accordion" id="accordionExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="headingOne">
      <button class="button" style=" text-align: center; background-color: #ffffff; border: 4px #a67fd2 outset; color: #000000; " type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"> 查詢 / 新增資料
      </button>
      <i class="fa-solid fa-caret-down"></i>
    </h2>
    <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
      <div class="accordion-body">
        <div class="container">
        <table style="line-height: 10px" class="table table-hover">
          <thead>
            <!--表示表格中不同直行 (column) 的標題-->
            <tr style="background-color: #dfd1ef">
              <!--定義表格的橫列 (row)-->
              <th align='center' valign="middle"scope="col">姓名</th>
              <th align='center' valign="middle"scope="col">性別</th>
              <th align='center' valign="middle"scope="col">連絡電話</th>
              <th align='center' valign="middle"scope="col">Email</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <form action="/managerToWarden/action" method="POST">
            <tr>
              <td align='center' valign="middle">
                <input type="text" class="form-control" id="studentID" name="studentID" value="" placeholder="" style="width: 100px" />
              </td>

            <td align='center' valign="middle">
                <select id="sex" name="sex" style="width: 130px" class="form-select" >
                  <option selected>選擇性別</option>
                  <option value="男">男生</option>
                  <option value="女">女生</option>
                </select>
              </td>
              <td align='center' valign="middle"> 
                <input type="text" class="form-control" id="name" name="name" value="" placeholder="" style="width: 150px" />
              </td>
      
              <td align='center' valign="middle"> 
                <input type="text" class="form-control" id="phone" name="phone" value="" placeholder="" style="width: 180px" />
              </td>
              <td align='center' valign="middle">
                <button style=" width: 75px; height: 40px; background-color: #335495; color: #ffffff; border: 2px #335495 outset; " type="submit" name="action" value="search" >
                    查詢
                </button>
              </td>
              <td>
                <button style=" width: 75px; height: 40px; background-color: #335495; color: #ffffff; border: 2px #335495 outset; " type="submit" name="action" value="add">
                  新增
                </button>
              </td>
            </tr>
          </form>
        </table>
        </div>
      </div>
    </div>
  </div>
</div>
