<div class="container">
  <table style="line-height: 10px" class="table  table-hover">
    <thead>
      <!--表示表格中不同直行 (column) 的標題-->
      <tr style="background-color: #dfd1ef">
        <!--定義表格的橫列 (row)-->
        <th scope="col" align='center' valign="middle">大樓名稱</th>
        <th scope="col" align='center' valign="middle">宿舍房號</th>
        <th scope="col" align='center' valign="middle">設備種類</th>
        <th scope="col" align='center' valign="middle">設備數量</th>
        <th scope="col" align='center' valign="middle">設備狀況</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each message}}
      <tr>
        <form action="/supervisorToEquipment/action" method="post">
          <input type="hidden" name="searchSQL" value="{{../searchSQL}}"/>
          <input type="hidden" name="building" value="{{this.DB_Number}}">
          <input type="hidden" name="room" value="{{this.E_D_Dormitory_No}}">
          <input type="hidden" name="type" value="{{this.E_Type}}">
          <th scope="row" align='center' valign="middle">{{this.DB_Name}}</th>
          <td align='center' valign="middle">{{this.E_D_Dormitory_No}}</td>
          <td align='center' valign="middle">{{this.E_Type}}</td>
          <td align='center' valign="middle">
            <input type="text" name="quantity" value="{{this.E_D_Quantity}}" />
          </td>
          <td align='center' valign="middle">
            <input type="text" name="condition" value="{{this.E_D_Condition}}" />
          </td>
          <td>
            <button style=" width: 120px; height: 40px; background-color: #5769b4; color: #ffffff; border: 2px #5769b4 outset;" 
            type="submit" name="action" value="update"> 更新狀況</button>
          </td>
        
        </form>
      </tr>
      {{/each}}
    </tbody>
  </table>
